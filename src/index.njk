---
layout: layouts/base.njk
title: NHS login Help Centre
excludeFromSearch: true
---
<header class="nhsuk-header" role="banner">
  <div class="nhsuk-width-container nhsuk-header__container">
    <div class="nhsuk-header__logo">
      <a class="nhsuk-header__link nhsuk-header__link--service nhsuk-header__link--service-short-name" href="https://manage-nhs-login.herokuapp.com/account/v11hc/" aria-label="NHS.UK prototype kit home">
        <svg class="nhsuk-logo nhsuk-logo--white" xmlns="http://www.w3.org/2000/svg" role="presentation" focusable="false" viewBox="0 0 40 16">
          <path fill="#fff" d="M0 0h40v16H0z"></path>
          <path fill="#005eb8" d="M3.9 1.5h4.4l2.6 9h.1l1.8-9h3.3l-2.8 13H9l-2.7-9h-.1l-1.8 9H1.1M17.3 1.5h3.6l-1 4.9h4L25 1.5h3.5l-2.7 13h-3.5l1.1-5.6h-4.1l-1.2 5.6h-3.4M37.7 4.4c-.7-.3-1.6-.6-2.9-.6-1.4 0-2.5.2-2.5 1.3 0 1.8 5.1 1.2 5.1 5.1 0 3.6-3.3 4.5-6.4 4.5-1.3 0-2.9-.3-4-.7l.8-2.7c.7.4 2.1.7 3.2.7s2.8-.2 2.8-1.5c0-2.1-5.1-1.3-5.1-5 0-3.4 2.9-4.4 5.8-4.4 1.6 0 3.1.2 4 .6"></path>
          <image src="https://assets.nhs.uk/images/nhs-logo.png" xlink:href=""></image>
        </svg>
        <span class="nhsuk-header__service-name"></span>
      </a>
    </div>
  </div>
</header>
<section class="nhsuk-hero">
  <div class="nhsuk-width-container nhsuk-hero--border">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-hero__wrapper">
        <center>
          <h1 class="nhsuk-u-margin-bottom-3">NHS login help centre</h1>
          <p></p>
        </center>
      </div>
    </div>
  </div>
</section>
<div class="nhsuk-width-container">
  <main class="nhsuk-main-wrapper" id="maincontent" role="main">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <div class="nhsuk-grid-row nhsuk-panel-group nhsuk-u-margin-bottom-0">
          {%- for page in collections.hubs.home.pages -%}
            <div class="nhsuk-grid-column-one-half nhsuk-panel-group__item nhsuk-u-margin-0">
              <div class="nhsuk-promo nhsuk-u-margin-bottom-5">
                <a class="nhsuk-promo__link-wrapper" href="{{ page.url | url }}">
                  <div class="nhsuk-promo__content">
                    <h2 class="nhsuk-promo__heading">{{page.data.title}}</h2>
                    <p class="nhsuk-promo__description">
                      {{ page.data.subtitle }}</p>
                  </div>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </main>
</div>
