---
layout: layouts/base.njk
title: Contact Us
excludeFromSearch: true
---
{% include "header.njk" %}
<div class="nhsuk-width-container ">
    <main class="nhsuk-main-wrapper " id="maincontent" role="main">
        <div class="nhsuk-grid-row">
            <form id="contact-us-form" class="nhsuk-grid-column-two-thirds">
                <h2 class="nhsuk-app-contact-panel__heading">Contact us</h2>
                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="name">
                        Name
                    </label>
                    <input class="nhsuk-input nhsuk-u-width-one-half" id="name" name="name" type="text" required>
                </div>
                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="email">
                        Email address
                    </label>
                    <fieldset class="nhsuk-fieldset" aria-describedby="contact-hint">
                        <span class="nhsuk-hint">
                            This is the email address we will contact you on.
                        </span>
                        <input class="nhsuk-input nhsuk-u-width-two-thirds" id="email" name="email" type="email" required>
                    </fieldset>
                </div>

                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="errorcode">
                        Problem or issue
                    </label>
                    <select class="nhsuk-select" id="errorcode" name="errorcode">
                        {%- for link in collections.contactUsLinks -%}
                            <option value="{{link.errorCode}}">{{link.errorCode}}: {{link.linkText}}</option>
                        {%- endfor -%}
                    </select>
                </div>

                <div class="nhsuk-form-group">
                    <label class="nhsuk-label" for="message">
                        Message
                    </label>
                    <span class="nhsuk-hint" id="message-hint">
                        Enter as much detail as you can, including any information we may have asked you to provide.
                    </span>
                    <textarea class="nhsuk-textarea" id="message" name="message" rows="6"
                        aria-describedby="message-hint" required></textarea>
                </div>

                <button class="nhsuk-button">
                    Send message
                </button>
                <!-- End of content -->
            </div>
        </div>
    </main>
</div>
<script src={{ "/js/contact-page.js" | url }}></script>
{% include "footer.njk" %}